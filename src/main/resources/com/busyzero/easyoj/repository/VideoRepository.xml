<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.busyzero.easyoj.repository.VideoInfoRepository">

    <!--TODO 全部需要进行修改-->


    <insert id="saveVideo">
        INSERT INTO video(task_item_id,link)
        VALUES(#{item.taskItemId},#{item.link})
    </insert>

    <insert id="saveAllVideos">
        INSERT INTO video(task_item_id,link)
        VALUES
        <foreach collection="videos" item="item" separator=",">
            (#{item.taskItemId},#{item.link})
        </foreach>
    </insert>

    <select id="listAllByTaskItemId" resultType="video">
        SELECT video_id,task_item_id,link,gmt_create,gmt_modified
        FROM video
        WHERE task_item_id=#{taskItemId}
    </select>
    <update id="updateVideo">
        UPDATE video
        SET task_item_id=#{taskItemId},
        SET link=#{link}
        WHERE video_id=#{videoId}
    </update>

    <update id="updateVideos">
        UPDATE video
        SET task_item_id=#{taskItemId},
        SET link=#{link}
        WHERE video_id=#{videoId}
    </update>

    <delete id="removeById">
        DELETE FROM video
        WHERE video_id=#{videoId}
    </delete>

    <delete id="removeAllByIds">
        DELETE FROM video
        WHERE video_id IN
        <foreach collection="videoIds" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>
</mapper>